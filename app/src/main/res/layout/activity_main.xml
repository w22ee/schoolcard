<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity"
    android:background="@color/gray_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/admin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/admin" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magin_top"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/diankong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_top"
            android:layout_marginLeft="@dimen/magin_left"
            android:textColor="@color/regular_text"
            android:textSize="@dimen/button_text"
            android:text="电控缴费"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_top"
            android:layout_marginLeft="@dimen/magin_left">
            <com.lixi.shoolcard.views.GridItemView
                android:id="@+id/recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="缴费"
                app:icon="@mipmap/recharge"
                />
            <com.lixi.shoolcard.views.GridItemView
                android:id="@+id/rechargerecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="充值记录查询"
                app:icon="@mipmap/rechargerecord"
                />
        </LinearLayout>
        <!--View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="0.5px"
            android:layout_marginTop="10dp"/-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magin_top"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_top"
            android:layout_marginLeft="@dimen/magin_left"
            android:textColor="@color/regular_text"
            android:textSize="@dimen/button_text"
            android:text="卡业务"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_top"
            android:layout_marginLeft="@dimen/magin_left">
            <com.lixi.shoolcard.views.GridItemView
                android:id="@+id/transactionrecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="交易查询"
                app:icon="@mipmap/transaction"
                />
        </LinearLayout>
        <!--View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="0.5px"
            android:layout_marginTop="10dp"/-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magin_top"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_top"
            android:layout_marginLeft="@dimen/magin_left"
            android:textColor="@color/regular_text"
            android:textSize="@dimen/button_text"
            android:text="个人业务"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_top"
            android:layout_marginLeft="@dimen/magin_left">
            <com.lixi.shoolcard.views.GridItemView
                android:id="@+id/reportloss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="挂失"
                app:icon="@mipmap/reportloss"
                />
            <com.lixi.shoolcard.views.GridItemView
                android:id="@+id/changepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="修改密码"
                app:icon="@mipmap/changepassword"
                />
        </LinearLayout>
        <!--View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="0.5px"
            android:layout_marginTop="10dp"/-->
    </LinearLayout>

</LinearLayout>